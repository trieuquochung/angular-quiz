rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Questions collection - Allow read/write for testing
    // TODO: Restrict write access in production
    match /questions/{questionId} {
      allow read, write: if true; // Open access for testing
    }
    
    // Quiz results - Anyone can submit and read for testing
    match /quizResults/{resultId} {
      allow read, write: if true; // Open access for testing
    }
    
    // Statistics collection (optional - for aggregated data)
    match /statistics/{statId} {
      allow read: if true;   // Public statistics
      allow write: if false; // Updated manually by admin
    }
    
    // Catch-all rule for testing
    match /{document=**} {
      allow read, write: if true;
    }
  }
}